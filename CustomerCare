import java.util.Scanner;

public class Product {
  public static void main(String[] args) {
    Scanner input = new Scanner(System.in);
    System.out.print("[PRESS 1] to request a refund\n[PRESS 2] to talk with ticket support\n[PRESS 3] to contact the staff\n[PRESS 4] to cancel\nEnter: ");
    int reply = input.nextInt();

    switch(reply) {
      case 1:
        System.out.println("Request sent to the authority!");
        break;
      case 2:
        System.out.println("Dialing ticket support...");
        break;
      case 3:
        System.out.println("Contacting the staff...");
        break;
      case 4:
        System.out.println("Canceled!");
      default:
        System.out.println("ERROR! Please select from the following list! 1/2/3/4");
    }
      
  }
}
